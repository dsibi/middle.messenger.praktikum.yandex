{{>header}}
<main>
      <div id="wrapper">
        <form action="" method="get">
          <div class="box">
            <img
              src="{{avaPath}}"
              alt="My Avatar"
              id="avatar"
              name="avatar"
              width="80px"
            />
          </div>
          {{#fieldsToEdit}}
          <div class="fields">
            <label for="{{id}}">{{label}} </label>
            <input
              type="text"
              id="{{id}}"
              name="{{id}}"
              value="{{value}}"
              required
              readonly
              onclick="editStart(this)"
            />
          </div>
          {{/fieldsToEdit}}
          <hr />
          {{#passToEdit}}
          <div class="fields">
            <label for="{{id}}" id="{{id}}">{{label}} </label>
            <input
              id="{{id}}"
              name="{{id}}"
              value="{{value}}"
              required
              readonly
              onclick="editStart(this)"
              type="password"
            />
          </div>
          {{/passToEdit}}
          <div id="btn">
            {{> button value="Save" href="'/'"}}
            {{> button
            value="Cancel" href="'/'"}}
          </div>
        </form>
      </div>
    </main>
